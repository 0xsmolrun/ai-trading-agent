TAAPI_API_KEY=your_taapi_key_here  # From https://taapi.io
OPENROUTER_API_KEY=your_openrouter_key_here  # From https://openrouter.ai

# ============================================================================
# DEX CONFIGURATION
# ============================================================================
# Select DEX: "hyperliquid" or "lighter"
DEX=hyperliquid

# Hyperliquid Configuration
HYPERLIQUID_PRIVATE_KEY=0x_your_private_key_here  # Wallet private key
# Optional Hyperliquid overrides:
# HYPERLIQUID_NETWORK=mainnet  # or testnet
# HYPERLIQUID_BASE_URL=https://api.hyperliquid.xyz

# Lighter Configuration (Arbitrum DEX)
LIGHTER_PRIVATE_KEY=0x_your_private_key_here  # Can reuse Hyperliquid key
LIGHTER_RPC_URL=https://rpc.ankr.com/arbitrum  # Arbitrum RPC endpoint
LIGHTER_CHAIN_ID=42161  # Arbitrum mainnet
LIGHTER_ROUTER_ADDRESS=0x...  # Lighter V2 Router address
LIGHTER_USE_MARKET_MAKING=false  # Enable market making on Lighter

# ============================================================================
# TRADING CONFIGURATION
# ============================================================================
ASSETS="BTC ETH SOL"
INTERVAL="5m"  # Supported: 5m, 15m, 30m, 1h, 4h, 1d

# ============================================================================
# LLM MODEL SELECTION
# ============================================================================
# Use model name or full OpenRouter identifier
# Supported models:
#   - grok-4 (default)
#   - claude-sonnet-4.5 (NEW!)
#   - claude-sonnet-3.5
#   - claude-opus-3.5
#   - gpt-4o
#   - deepseek-r1
#   Or use full identifier like: anthropic/claude-sonnet-4.5
LLM_MODEL=grok-4

# Optional OpenRouter settings:
# OPENROUTER_REFERER=https://your-site.com
# OPENROUTER_APP_TITLE=trading-agent

# ============================================================================
# TRADER XO STRATEGY CONFIGURATION
# ============================================================================
# Enable strategy-based trading (true/false)
USE_STRATEGY=false

# Strategy name (currently only "trader_xo" is supported)
STRATEGY_NAME=trader_xo

# Strategy mode: "standalone" (strategy only) or "hybrid" (strategy + LLM)
STRATEGY_MODE=standalone

# Trader XO Strategy Parameters
TRADER_XO_FAST_EMA=12              # Fast EMA period
TRADER_XO_SLOW_EMA=25              # Slow EMA period
TRADER_XO_MA_FILTER_PERIOD=200     # MA filter period
TRADER_XO_MA_FILTER_TYPE=EMA       # MA filter type: EMA, SMA, WMA, or None
TRADER_XO_STOP_LOSS_PERCENT=7.0    # Stop loss percentage
TRADER_XO_USE_STOP_LOSS=true       # Enable stop loss (true/false)
TRADER_XO_USE_STOCH_CONFIRMATION=false  # Require StochRSI confirmation (true/false)

# ============================================================================
# MARKET MAKING STRATEGY CONFIGURATION (for Lighter)
# ============================================================================
MM_SPREAD_BPS=10                   # Half-spread in basis points (10 = 0.1%)
MM_ORDER_SIZE_USD=100.0            # Order size in USD per level
MM_NUM_LEVELS=3                    # Number of price levels on each side
MM_LEVEL_SPACING_BPS=5             # Spacing between levels in bps
MM_REFRESH_INTERVAL_SEC=30         # How often to refresh orders (seconds)